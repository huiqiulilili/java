        document.write(str3.charAt(2));
        document.write("<hr>");

        var str4 = "qwerty";
        document.write(str4.indexOf("x"));
        document.write("<hr>");

        var str5 = "a-b-c-d";
        var arr1 =  str5.split("-");
        document.write("len:" + arr1.length)
        document.write("<hr>");

        var str6 = "abcd";
        document.write(str6);
        document.write("<br>");
        document.write(str6.replace("a","q"));
        document.write("<hr>");

        var str7 = "qwertyuioasdfghjkl";
