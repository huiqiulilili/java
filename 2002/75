    <script>
        function insert1(){
            var li13 =  document.getElementById("li13");
            var li14 =  document.createElement("li");
            var text14 =  document.createTextNode("鹿晗");
            li14.appendChild(text14);
            var ul1 = document.getElementById("ulid21");
            ul1.insertBefore(li14,li13);
        }
    </script>
